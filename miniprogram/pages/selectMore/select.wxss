.container .img-box .clip .bg {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  background: #000;
  opacity: 0.6;
  height: 50rpx;
  z-index: 1;
}

.container .img-box .clip .tips {
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  color: #fff;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  z-index: 2;
}

.container .img-box .item .img {
  width: 100%;
  height: 100%;
}

.container .img-box .item .delete {
  position: absolute;
  right: -12rpx;
  top: -12rpx;
  z-index: 1;
  height: 44rpx;
  width: 44rpx;
}

.container .img-box .item-add.add {
  border: 1px dashed #bdbdbd;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 250rpx;
}

.container .img-box .item-add.add image {
  height: 80rpx;
  width: 80rpx;
}

.container .img-box .item-add.add text {
  color: #656565;
  line-height: 1;
}

.container .img-box .item-add.add text:nth-of-type(1) {
  margin-top: 26rpx;
  font-size: 24rpx;
}

.container .img-box .item-add.add text:nth-of-type(2) {
  margin-top: 30rpx;
  font-size: 20rpx;
}

.container .img-box .item .mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.3);
  text-align: center;
}

.container .img-box .item .mask .annotation {
  height: 32rpx;
  width: 32rpx;
}

.container .img-box .item .mask text {
  padding: 0;
  color: white;
  font-size: 24rpx;
  text-align: center;
}

.container .bottom-box {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 148rpx;
  background-color: white;
  justify-content: space-between;
  align-items: center;
  display: flex;
  padding: 0 32rpx;
}

.container .bottom-box .hint {
  display: flex;
  justify-content: center;
  align-items: center;
}

.container .bottom-box .hint text {
  color: #656565;
  font-size: 32rpx;
}

.container .bottom-box .hint text.highlight {
  color: #ff6336;
}

.container .bottom-box .btn {
  font-size: 28rpx;
  height: 58rpx;
  line-height: 58rpx;
  width: 180rpx;
  border-radius: 8rpx;
  color: white;
  text-align: center;
  background-color: #ff6336;
}

.container .bottom-box .btn.disabled {
  background-color: #bdbdbd;
}

.container .none {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  height: 100%;
}

.container .none image {
  width: 400rpx;
  height: 219rpx;
  margin-top: 290rpx;
  margin-bottom: 30rpx;
}

.container .none view {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #656565;
}

.container .footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  height: 100rpx;
  line-height: 100rpx;
}

.container .next {
  width: calc(100vw - 150rpx);
  height: 100rpx;
  line-height: 100rpx;
  background: #383b6a;
  border-radius: 4rpx;
  text-align: center;
  font-size: 32rpx;
  position: fixed;
  color: white;
  left: 150rpx;
  bottom: 0;
}

.home-page {
  width: 150rpx;
  height: 99rpx;
  line-height: 99rpx;
  text-align: center;
  border-top: 1px solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
}

.container .next.disable {
  background-color: #989898;
}

.version {
  text-align: center;
  width: 600rpx;
  margin: 90rpx auto 0;
  font-size: 28rpx;
  line-height: 3.2em;
}

.version .title {
  font-size: 30rpx;
  width: 500rpx;
  margin: 0 auto;
  border-bottom: 1px solid #383b6a;
  color: #383b6a;
  font-weight: 600;
}

.choujiang {
  width: 600rpx;
  position: fixed;
  top: calc(50vh - 350rpx);
  z-index: 999;
  left: calc(50vw - 300rpx);
}

.choujiang-jieguo {
  width: 600rpx;
  position: fixed;
  top: calc(50vh - 400rpx);
  z-index: 999;
  left: calc(50vw - 300rpx);
}

.choujiang-msg {
  position: absolute;
  color: #fff;
  bottom: 220rpx;
  width: 100%;
  text-align: center;
}

.sharetofriend {
  position: absolute;
  bottom: 60rpx;
  width: 400rpx;
  height: 85rpx;
  line-height: 85rpx;
  left: calc(50% - 200rpx);
  border-radius: 85rpx;
}

.cj-icon {
  width: 80rpx;
  height: 108rpx;
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  z-index: 1;
}

.close-dialog-btn {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  bottom: -100rpx;
  left: calc(50% - 25rpx);
}