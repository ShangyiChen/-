/* pages/selectMore/select.wxss */
.line-shadow {
  width: 100vw;
  position: fixed;
  box-shadow: 0px 1rpx 10rpx 1rpx rgba(0,0,0,0.1);
}

.container {
  margin: 0 -1px;
  padding: 32rpx 30rpx;
}

.container .img-box {
  height: calc(100vh - 148rpx - 32rpx);
  width: 100%;
  display: flex;
  justify-content: start;
  align-content: flex-start;
  flex-wrap: wrap;
  overflow-y: scroll;
  z-index: 2;
}

.container .img-box .item {
  position: relative;
  margin: 16rpx 15rpx 66rpx;
  height: 200rpx;
  width: calc((100% - 0 * 30rpx - 2 * 3 * 15rpx - 6px) / 3);
  border: 1px solid transparent;
}

.container .img-box .item-add {
  position: relative;
  margin: 16rpx 15rpx;
  height: 200rpx;
  width: calc((100% - 0 * 30rpx - 2 * 3 * 15rpx - 6px) / 3);
  border: 1px solid transparent;
}

.container .img-box .clip{
  position: absolute;
  bottom: -50rpx;
  width: 100%;
  color: #fff;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
